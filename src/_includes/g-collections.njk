---
layout: "base.njk"
---
<section>
    {{content | safe }}
</section>
<div> 
<table>
{% for game in gctable %}
    {% if loop.first %}
        <thead>
            <th>{{game.gameimage}}</th>
            <th>{{game.gametitle}}</th>
            <th>{{game.gamedate}}</th>
            <th>{{game.gamedesc}}</th>
            <th>{{game.gameplatform}}</th>
        </thead>
    {% else %}
        <tr>
            <td>
                <a>
                    {% image game.gameimage2, "" %}
                     <a href= "{{game.gameimage}}" target="_blank">
                      <img class=gamethumbnail src="{{game.gamethumbnail}}">
                </a>
            </td>
            <td>{{game.gametitle}}</td>
            <td>{{game.gamedate}}</td>
            <td>{{game.gamedesc}}</td>
            <td>{{game.gameplatform}}</td>
        </tr>
    {% endif %}
{% endfor %}
</table>
</div>